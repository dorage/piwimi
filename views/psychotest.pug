extends layout.pug 

block head
    title="PIWIMI | Indonesian Test"
    meta(property="og:title" content=`PIWIMI | ${contentHeader}`)
    meta(property="og:type" content="result")
    meta(property="og:image" content=`/public/img/indonesianTest/thumb.png`)
    meta(property="og:url" content="https://piwimi.id")

block body_body
    template#template-question-multiple
        .psycho__question
            .content-header=``
            .content-selections
            .content-index
                p=''
    template#template-question-singular
        .psycho__question
            .question__index
                p='placeholder_Index'
            .question__query
                p='placeholder_Question'
            .question__yes-or-no
                button.question__yes-button="IYA"
                button.question__no-button="TIDAK"
    template#template-selection
        .selection_box
            .selection_text=''
    template#template-submit
        .psycho__control
            .psycho__control-row
                button.bt_submit#prev="Sebelumnya"
                button.bt_submit#next="Selanjutnya"
            .psycho__control-row
                button.bt_submit#submit="Lihat Hasil"
    template#template-loading
        .psycho__question
            .content-loading
                .left
                    .circle
                .center
                    .circle
                    .circle
                    .circle
                .right
                    .circle
            .loading_text="결과를 불러오는중입니다."
    .psycho__question
        .content-header=contentHeader
        .content-thumbnail
            img.thumbnail__img(src="/public/img/indonesianTest/thumb.png")
        .content-description=contentDescription
        .content-notice="※ Ini hanya untuk bersenang-senang"
    .psycho__control
        button.bt_start.completed="Mulai"
    //.questions(data-questions=`${JSON.stringify(contents)}`)
    script(src="/public/js/psychotest.bundle.js")
